      } else if(chartNumber == 6) {
        $('#fifthVideoQuestion_chart_container').toggle('fast', function() {});
        $('#sixthVideoQuestion_chart_container').toggle('fast', function() {});
      } else {
        restartiDoc();
      }

      chartNumber += 1;

      if(chartNumber == 7) {
        setTimeout("showAChart()", 30000); // the last chart
      } else {
        setTimeout("showAChart()", 20000); // not the last chart
      }

    }

    function restartiDoc() {
      //alert("Restart");
      $(window.location).attr('href', 'http://companions.napier.ac.uk/idoc');
    }
   
         
