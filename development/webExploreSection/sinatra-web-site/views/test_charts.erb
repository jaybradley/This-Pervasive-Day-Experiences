    function showAChart() {
      
      if(chartNumber == 1) {
        //$('#firstQuestion_chart_container').toggle(); // starts shown
      } else if(chartNumber == 2) {


        $('#firstQuestion_chart_container').toggle('fast', function() {});
        $('#firstVideoQuestion_chart_container').toggle('fast', function() {});
      }  else if(chartNumber == 3) {
        $('#firstVideoQuestion_chart_container').toggle('fast', function() {});
        $('#thirdVideoQuestion_chart_container').toggle('fast', function() {});
      } else if(chartNumber == 4) {
        $('#thirdVideoQuestion_chart_container').toggle('fast', function() {});
        $('#fourthVideoQuestion_chart_container').toggle('fast', function() {});
      } else if(chartNumber == 5) {
        $('#fourthVideoQuestion_chart_container').toggle('fast', function() {});
