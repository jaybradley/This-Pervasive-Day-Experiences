var <%= params[:chart_name] %>_chart;

<%= params[:chart_name] %>_chart = new Highcharts.Chart({
    chart: {
        renderTo: '<%= params[:chart_name] %>_chart_container',
        defaultSeriesType: 'pie',
        marginRight: 0,
        marginBottom: 0,
        backgroundColor: "#000000"
    },
    plotOptions: {
      pie: {
        dataLabels: {
         color: "#fff"
        }
      }
    },
    credits: {
        enabled: false
    },
    title: {
        text: 'How do you feel about personalised adaptive shopping?',
        x: 0 //center
    },
    tooltip: {
        formatter: function() {
            return '<b>'+ this.point.name +'</b><br/>'+ this.y +'%';
        }
    },
    series: [{
        type: 'pie',
        name: 'Like or dislike',
        data: [
            { name: 'Like', y: <%= @yes_percentage %>, color: '#085788' },
            { name: 'Dislike', y: <%= @no_percentage %>, color: '#873908' }
        ]
    }]
});











